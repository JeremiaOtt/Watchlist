<UserControl x:Class="Watchlist.Views.EntryListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Watchlist.Views"
             xmlns:enum="clr-namespace:Watchlist.Enum"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <ListView Name="LvSpinOffs" ItemsSource="{Binding SeriesCollection}">
                <ListView.View>

                    <GridView>
                        <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Watched" Width="120" DisplayMemberBinding="{Binding Watched}"/>
                    </GridView>

                </ListView.View>
            </ListView>
        </StackPanel>

        <Button Content="Add" Grid.Column="1" Command="{Binding UpdateViewCommand}" CommandParameter="{x:Static enum:UpdateView.EntryList_NewEntry}"/>
    </Grid>
</UserControl>

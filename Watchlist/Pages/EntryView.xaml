<Page x:Class="Watchlist.Pages.EntryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Watchlist.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EntryView">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <ListView Name="LvSpinOffs" ItemsSource="{Binding Series}">
                <ListView.View>

                    <GridView>
                        <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Watched" Width="120" DisplayMemberBinding="{Binding Watched}"/>
                    </GridView>

                </ListView.View>
            </ListView>
        </StackPanel>

        <Button x:Name="Add_Entry" Content="Add" Grid.Column="1" Click="Add_Entry_Click"/>
    </Grid>

</Page>
